{
    "name": "Learn Enhancer",
    "version": "2.0.0",
    "manifest_version": 2,
    "content_scripts": [
      {
        "matches": [
          "http://learn.canterbury.ac.nz/*",
          "https://login.canterbury.ac.nz/idp/Authn/UserPassword"
        ],
        "js": ["domready.js", "pranks.js", "content.js"],
        "run_at": "document_start"
      },
      {
        "matches": ["http://learn.canterbury.ac.nz/*"],
        "exclude_matches": ["http://learn.canterbury.ac.nz/pluginfile.php/*"],
        "css": ["content.css"]
      }
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": [
      "webRequestBlocking",
      "webRequest",
      "storage",
      "http://learn.canterbury.ac.nz/*",
      "https://login.canterbury.ac.nz/idp/Authn/UserPassword"
    ],
    "icons": {"48": "48.png",
              "128": "128.png" },
    "options_page": "options.html"

}
